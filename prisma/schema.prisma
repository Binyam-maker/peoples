generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  companyName      String?  @unique @map("company_name")
  email            String?  @unique
  password         String
  address          String
  phoneNumber      String   @map("phone_number")
  website          String?
  sector           String
  tin              Int
  enterpriseNumber Int      @map("enterprise_number")
  accountNumber    Int      @map("account_number")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  role             Role     @default(CompanyAdmin)
}

enum Role {
  CompanyAdmin
  CompanyUser
}
